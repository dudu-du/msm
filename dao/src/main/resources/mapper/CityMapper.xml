<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.welsee.mapper.CityMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.welsee.entity.City">
        <id column="city_id" property="cityId" />
        <result column="city_en" property="cityEn" />
        <result column="city_cn" property="cityCn" />
        <result column="country_code" property="countryCode" />
        <result column="country_en" property="countryEn" />
        <result column="country_cn" property="countryCn" />
        <result column="province_en" property="provinceEn" />
        <result column="province_cn" property="provinceCn" />
        <result column="admin_ district_en" property="adminDistrictEn" />
        <result column="admin_ district_cn" property="adminDistrictCn" />
        <result column="latitude" property="latitude" />
        <result column="lngitude" property="lngitude" />
        <result column="ad_code" property="adCode" />
    </resultMap>
    <select id="selectByName" resultMap="BaseResultMap">
        SELECT * FROM  city WHERE  city_en like "%"#{name}"%" or city_cn like "%"#{name}"%"
    </select>
</mapper>
